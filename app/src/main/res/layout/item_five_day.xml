<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/cloud_one"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/day"
        app:layout_constraintBottom_toBottomOf="@+id/day"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/cloud"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Wed"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/cloud_one"
        app:layout_constraintTop_toTopOf="@+id/cloud_one"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/weather_condition_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Thunderstorm"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/day"
        app:layout_constraintTop_toTopOf="@+id/day"
        app:layout_constraintBottom_toBottomOf="@+id/day"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/high_temp_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toStartOf="@+id/slash_one"
        app:layout_constraintTop_toTopOf="@+id/weather_condition_day"
        app:layout_constraintBottom_toBottomOf="@+id/weather_condition_day"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dot_one"
        android:text="°"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/high_temp_day"
        app:layout_constraintStart_toEndOf="@+id/high_temp_day"
        />

    <TextView
        android:id="@+id/slash_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" / "
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/low_temp_day"
        app:layout_constraintTop_toTopOf="@id/low_temp_day"
        app:layout_constraintBottom_toBottomOf="@id/low_temp_day"
        />

    <TextView
        android:id="@+id/low_temp_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/weather_condition_day"
        app:layout_constraintBottom_toBottomOf="@+id/weather_condition_day"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dot_one_2"
        android:text="°"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/low_temp_day"
        app:layout_constraintStart_toEndOf="@+id/low_temp_day"
        />
</androidx.constraintlayout.widget.ConstraintLayout>